@{
    ViewData["Title"] = "TopLists";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">

    <style>
        .posters {
            width: 150px;
            height: 200px;
          
        }            
        #text{
            font-size:18px;
        }
        
        table tr {
            border: solid 1px;
            border-color: lightgrey;
        }
    </style>

    <script type="text/javascript" src="~/js/jquery-1.10.2.min.js" integrity="" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/scripts/jquery.js"></script>


</head>
<body>
    <h2>Top Rated</h2>
    <br />
    <div id="cardContainer">
       </div>

</body>
</html>

<script>

                    $(document).ready(function () {
                        $.getJSON('https://api.themoviedb.org/3/movie/top_rated?api_key=fdde54599d906f755b9911ea4553bd7d&language=en-US&page=1', function (data) {
                            //a0b6e7bc
                            //74e33cd2
                            //console.log(data.results['0'].original_title);

                            var contentString = [];
                            for (var i = 0; i < data.results.length; i++) {

                                console.log(data.results[i].poster_path);
                                var links = "https://image.tmdb.org/t/p/w185" + data.results[i].poster_path;
                                contentString[i] = '<table>' +
                                    '<tbody>' +
                                    '<tr>' +
                                    '<th style="width: 100px; text-align:center; font-size: 22px">' +
                                    (i+1) +
                                    '</th>' +
                                    '<th style="width: 210px;">' +
                                    '<img class ="posters"  src=' + links +' />' +
                                    '</th>' +
                                    '<th style="width: 590px;" id="text">' +
                                    data.results[i].title +
                                    '</th>' +
                                    '<th style="width: 200px;">' +
                                    '<img style="width: 18px; height: 20px;" src="/Images/Star.png" />' + ' '  + data.results[i].vote_average +' ('+ data.results[i].vote_count + ' votes)' +
                                    '</th>' +
                                    '</tr>' +
                                    '</tbody>' +
                                    '</table></br>'         

                                $('#cardContainer').append(contentString[i]);
                              
                            }
                        });
                    });
    //https://image.tmdb.org/t/p/w185/
</script>
