<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoviesWebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img srcset="/Images/logo.png" width="150px" height="60px;" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a class="navbar-brand" asp-area="" asp-controller="Movies" asp-action="Index">Home</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Movies
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <a class="dropdown-item" asp-action="Details" asp-controller="Movies" asp-area="">Action</a>

                                <a class="dropdown-item" asp-action="AdventureMovies" asp-controller="Movies">Adventure</a>

                                <a class="dropdown-item" asp-action="HorrorMovies" asp-controller="Movies" asp-area="">Horror</a>

                                <a class="dropdown-item" asp-action="DramaMovies" asp-controller="Movies" asp-area="">Drama</a>

                                <a class="dropdown-item" asp-action="RomanceMovies" asp-controller="Movies" asp-area="">Romance</a>

                                <a class="dropdown-item" asp-action="ComedyMovies" asp-controller="Movies" asp-area="">Comedy</a>
                            </div>
                        </li>
                    </ul>
                </div>
                @*<a class="navbar-brand" asp-area="" asp-controller="Movies" asp-action="TopLists">Top Lists</a>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            Hello @User.Identity.Name
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            Not logged in.
                        </li>
                    }
                </div>*@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MoviesWebApplication - <a asp-area="" asp-controller="Movies" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
